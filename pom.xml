        -->
        <repository>
            <id>local-hack-repo</id>
            <name>LocalDir</name>
            <url>file://${project.basedir}/../dist-maven</url>
        </repository>
        <snapshotRepository>
            <id>local-hack-repo-snap</id>
            <name>LocalDir</name>
            <url>file://${project.basedir}/../dist-maven</url>
        </snapshotRepository>
    </distributionManagement>  

</project>
